{
  "manifest_version": 3,
  "name": "Sidepanel Extension",
  "version": "1.0",
  "description": "A simple sidepanel extension with React and Vite",
  "permissions": ["sidePanel", "scripting", "activeTab", "storage"],
  "host_permissions": ["*://*/*"],
  "action": {
    "default_title": "Open Side Panel"
  },
  "side_panel": {
    "default_path": "index.html"
  },
  "background": {
    "service_worker": "src/background.ts",
    "type": "module"
  }
}
